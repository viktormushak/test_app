<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/statistic_item_background"
    android:layout_margin="@dimen/statistic_item_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/statistic_item_title"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_card_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/statistic_item_margin"
        android:orientation="horizontal"/>

</LinearLayout>